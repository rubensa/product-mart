{
  "name": "product-mart",
  "dockerFile": "Dockerfile",
  "runArgs": [
    // Mounts the project folder to '/workspace'
    "--mount",
    "type=bind,source=${localWorkspaceFolder},target=/workspace",
    // VSCode server
    "--mount",
    "type=bind,source=${localWorkspaceFolder}/.vscode-server/bin,target=/home/user/.vscode-server/bin",
    "--mount",
    "type=bind,source=${localWorkspaceFolder}/.vscode-server/extensions,target=/home/user/.vscode-server/extensions",
    "--mount",
    "type=bind,source=${env:HOME}/.vscode-server/extensionsCache,target=/home/user/.vscode-server/extensionsCache",
    // User ssh keys
    "--mount",
    "type=bind,source=${env:HOME}/.ssh,target=/home/user/.ssh",
    // User GIT config
    "--mount",
    "type=bind,source=${env:HOME}/.gitconfig,target=/home/user/.gitconfig",
    // User NVM cache
    "--mount",
    "type=bind,source=${env:HOME}/.nvm/.cache,target=/opt/nvm/.cache",
    // User node cache
    "--mount",
    "type=bind,source=${env:HOME}/.npm/_cacache,target=/home/user/.npm/_cacache",
    // User node config
    "--mount",
    "type=bind,source=${env:HOME}/.npmrc,target=/home/user/.npmrc",
    // Docker in Docker
    "--mount",
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker.sock",
    "--mount",
    "type=bind,source=/usr/bin/docker,target=/usr/bin/docker",
    "--group-add",
    // cut -d: -f3 < <(getent group docker)
    "1001",
    // X11 Unix-domain socket
    "--mount",
    "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix",
    // Allow shared memory to avoid RAM access failures and rendering glitches due to X extesnion MIT-SHM
    "--ipc=host",
    // The kernel requires SYS_ADMIN for Chrome sand-box
    "--cap-add",
    "SYS_ADMIN",
    // $(id -u):$(id -g)
    "--user=1000:1000"
  ],
  "remoteEnv": {
    // Timezone
    "TZ": "Europe/Madrid",
    // X11 Unix-domain socket
    "DISPLAY": "unix${env:DISPLAY}"
  },
  "overrideCommand": false,
  // Container user VS Code should use when connecting
  "remoteUser": "user",
  // Set environment variables for VS Code and sub-processes
  "workspaceFolder": "/workspace",
  "postCreateCommand": [
    "/bin/bash",
    "-l",
    "-c",
    "export NODE_VERSION=lts/erbium; nvm install ${NODE_VERSION};"
  ],
  "extensions": [
    // Docker support
    "ms-azuretools.vscode-docker",
    // GIT support
    "mhutchie.git-graph",
    "eamodio.gitlens",
    // History support
    "xyz.local-history",
    // Angular language service
    "Angular.ng-template",
    // TSLint
    "ms-vscode.vscode-typescript-tslint-plugin"
  ],
  "settings": {
    // Run interactive bash shell in VSCode integrated terminal
    "terminal.integrated.shellArgs.linux": [
      "-l"
    ],
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
      "**/.classpath": true,
      "**/.project": true,
      "**/.settings": true,
      "**/.factorypath": true,
      "**/.git": true,
      "**/.gradle": true,
      "**/.idea": true,
      "**/.mvn": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/.DS_Store": true
    },
    // Configure glob patterns for excluding files and folders in searches. Inherits all glob patterns from the files.exclude setting.
    "search.exclude": {
      "**/node": true,
      "**/node_modules": true,
      "**/bower_components": true,
      "**/build": true,
      "**/target": true,
      "**/.vscode-server": true,
      "**/.history": true
    },
    // Show control characters
    "editor.renderControlCharacters": true,
    // Do not use current file indentation
    "editor.detectIndentation": false,
    // Use 2 characters for tabs
    "editor.tabSize": 2,
    // Format code on paste
    "editor.formatOnPaste": true,
    // Format code on file save
    "editor.formatOnSave": true,
    // Format code while typing
    "editor.formatOnType": true,
    // Disable preview editor
    "workbench.editor.enablePreview": false
  }
}
